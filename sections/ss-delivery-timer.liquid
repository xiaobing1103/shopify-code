<template id="ss-delivery-{{ section.id }}">
  <div
    class="section-{{ section.id }} delivery-{{ section.id }}"
    style="background-color:{{ background_color }}; background-image: {{ background_gradient }};"
  >
    <div class="section-{{ section.id }}-settings" id="ss-delivery-body-{{ section.id }}">
      {% if heading != blank or heading_use_delivery %}
        <div class="delivery-heading-{{ section.id }}">
          <h2>
            {% if heading_use_delivery %}
              <span>
                {% for block in section.blocks %}
                  {% if forloop.last %}
                    {% assign days_to_add = block.settings.days | plus: 0 %}
                    {% assign days_to_add_in_seconds = days_to_add | times: 86400 %}
                    {% assign extra_days = 0 %}
                    {% assign current_date = 'now' | date: '%s' | plus: 0 %}

                    {% assign current_wday = current_date | date: '%u' %}
                    {% if block.settings.weekend == false and current_wday == '6' or current_wday == '7' %}
                      {% assign current_date = current_date | plus: 86400 %}
                      {% if current_wday == '6' %}
                        {% assign current_date = current_date | plus: 86400 %}
                      {% endif %}
                    {% endif %}

                    {% assign target_date_in_seconds = current_date | plus: days_to_add_in_seconds %}
                    {% for i in (0..days_to_add) %}
                      {% assign days = i | times: 86400 %}
                      {% assign day_in_seconds = current_date | plus: days %}
                      {% assign wday = day_in_seconds | date: '%u' %}
                      {% if block.settings.weekend == false and wday == '6' or wday == '7' %}
                        {% assign extra_days = extra_days | plus: 1 %}
                        {% if wday == '6' %}
                          {% assign extra_days = extra_days | plus: 1 %}
                        {% endif %}
                      {% endif %}
                    {% endfor %}

                    {% assign second_days_to_add = block.settings.second_days | plus: 0 %}
                    {% assign second_days_to_add_in_seconds = second_days_to_add | times: 86400 %}
                    {% assign second_extra_days = 0 %}
                    {% assign second_target_date_in_seconds = current_date | plus: second_days_to_add_in_seconds %}
                    {% for i in (0..second_days_to_add) %}
                      {% assign second_days = i | times: 86400 %}
                      {% assign second_day_in_seconds = current_date | plus: second_days %}
                      {% assign second_wday = second_day_in_seconds | date: '%u' %}
                      {% if block.settings.weekend == false and second_wday == '6' or second_wday == '7' %}
                        {% assign second_extra_days = second_extra_days | plus: 1 %}
                        {% if second_wday == '6' %}
                          {% assign second_extra_days = second_extra_days | plus: 1 %}
                        {% endif %}
                      {% endif %}
                    {% endfor %}

                    {% if block.settings.weekend == false %}
                      {% assign extra_days_in_seconds = extra_days | times: 86400 %}
                      {% assign final_date_in_seconds = target_date_in_seconds | plus: extra_days_in_seconds %}
                      {% assign final_date = final_date_in_seconds | date: '%d %b' %}
                      {% assign second_extra_days_in_seconds = second_extra_days | times: 86400 %}
                      {% assign second_final_date_in_seconds = second_target_date_in_seconds
                        | plus: second_extra_days_in_seconds
                      %}
                      {% assign second_final_date = second_final_date_in_seconds | date: '%d %b' %}
                    {% else %}
                      {% assign final_date = target_date_in_seconds | date: '%d %b' %}
                      {% assign second_final_date = second_target_date_in_seconds | date: '%d %b' %}
                    {% endif %}

                    {% if shop.locale == 'es' %}
                      {% assign final_date = final_date
                        | replace: 'Jan', 'Enero'
                        | replace: 'Feb', 'Feb'
                        | replace: 'Mar', 'Marzo'
                        | replace: 'Apr', 'Abr'
                        | replace: 'May', 'Mayo'
                        | replace: 'Jun', 'Jun'
                        | replace: 'Jul', 'Jul'
                        | replace: 'Aug', 'Agosto'
                        | replace: 'Sep', 'Sept'
                        | replace: 'Oct', 'Oct'
                        | replace: 'Nov', 'Nov'
                        | replace: 'Dec', 'Dic'
                      %}
                      {% assign second_final_date = second_final_date
                        | replace: 'Jan', 'Enero'
                        | replace: 'Feb', 'Feb'
                        | replace: 'Mar', 'Marzo'
                        | replace: 'Apr', 'Abr'
                        | replace: 'May', 'Mayo'
                        | replace: 'Jun', 'Jun'
                        | replace: 'Jul', 'Jul'
                        | replace: 'Aug', 'Agosto'
                        | replace: 'Sep', 'Sept'
                        | replace: 'Oct', 'Oct'
                        | replace: 'Nov', 'Nov'
                        | replace: 'Dec', 'Dic'
                      %}
                    {% elsif shop.locale == 'fr' %}
                      {% assign final_date = final_date
                        | replace: 'Jan', 'Janv'
                        | replace: 'Feb', 'Févr'
                        | replace: 'Mar', 'Mars'
                        | replace: 'Apr', 'Avril'
                        | replace: 'May', 'Mai'
                        | replace: 'Jun', 'Juin'
                        | replace: 'Jul', 'Juil'
                        | replace: 'Aug', 'Août'
                        | replace: 'Sep', 'Sept'
                        | replace: 'Oct', 'Oct'
                        | replace: 'Nov', 'Nov'
                        | replace: 'Dec', 'Déc'
                      %}
                      {% assign second_final_date = second_final_date
                        | replace: 'Jan', 'Janv'
                        | replace: 'Feb', 'Févr'
                        | replace: 'Mar', 'Mars'
                        | replace: 'Apr', 'Avril'
                        | replace: 'May', 'Mai'
                        | replace: 'Jun', 'Juin'
                        | replace: 'Jul', 'Juil'
                        | replace: 'Aug', 'Août'
                        | replace: 'Sep', 'Sept'
                        | replace: 'Oct', 'Oct'
                        | replace: 'Nov', 'Nov'
                        | replace: 'Dec', 'Déc'
                      %}
                    {% elsif shop.locale == 'de' %}
                      {% assign final_date = final_date
                        | replace: 'Jan', 'Jan'
                        | replace: 'Feb', 'Feb'
                        | replace: 'Mar', 'März'
                        | replace: 'Apr', 'Apr'
                        | replace: 'May', 'Mai'
                        | replace: 'Jun', 'Juni'
                        | replace: 'Jul', 'Juli'
                        | replace: 'Aug', 'Aug'
                        | replace: 'Sep', 'Sept'
                        | replace: 'Oct', 'Okt'
                        | replace: 'Nov', 'Nov'
                        | replace: 'Dec', 'Dez'
                      %}
                      {% assign second_final_date = second_final_date
                        | replace: 'Jan', 'Jan'
                        | replace: 'Feb', 'Feb'
                        | replace: 'Mar', 'März'
                        | replace: 'Apr', 'Apr'
                        | replace: 'May', 'Mai'
                        | replace: 'Jun', 'Juni'
                        | replace: 'Jul', 'Juli'
                        | replace: 'Aug', 'Aug'
                        | replace: 'Sep', 'Sept'
                        | replace: 'Oct', 'Okt'
                        | replace: 'Nov', 'Nov'
                        | replace: 'Dec', 'Dez'
                      %}
                    {% elsif shop.locale == 'it' %}
                      {% assign final_date = final_date
                        | replace: 'Jan', 'Genn'
                        | replace: 'Feb', 'Febbr'
                        | replace: 'Mar', 'Mar'
                        | replace: 'Apr', 'Apr'
                        | replace: 'May', 'Magg'
                        | replace: 'Jun', 'Giugno'
                        | replace: 'Jul', 'Luglio'
                        | replace: 'Aug', 'Ag'
                        | replace: 'Sep', 'Sett'
                        | replace: 'Oct', 'Ott'
                        | replace: 'Nov', 'Nov'
                        | replace: 'Dec', 'Dic'
                      %}
                      {% assign second_final_date = second_final_date
                        | replace: 'Jan', 'Genn'
                        | replace: 'Feb', 'Febbr'
                        | replace: 'Mar', 'Mar'
                        | replace: 'Apr', 'Apr'
                        | replace: 'May', 'Magg'
                        | replace: 'Jun', 'Giugno'
                        | replace: 'Jul', 'Luglio'
                        | replace: 'Aug', 'Ag'
                        | replace: 'Sep', 'Sett'
                        | replace: 'Oct', 'Ott'
                        | replace: 'Nov', 'Nov'
                        | replace: 'Dec', 'Dic'
                      %}
                    {% endif %}

                    {{ final_date }}
                    {% if block.settings.range %} - {{ second_final_date }} {% endif %}
                  {% endif %}
                {% endfor %}
              </span>
            {% endif %}
            {{ heading }}
          </h2>
        </div>
      {% endif %}

      {% if items_style == 'first' %}
        <div class="delivery-top-{{ section.id }}">
          {% for block in section.blocks %}
            {% unless forloop.first %}
              <div class="delivery-top-line-{{ section.id }}"></div>
            {% endunless %}
            <div class="delivery-top-item-{{ section.id }}">
              <div class="delivery-top-image-{{ section.id }}">
                {% if block.settings.image != blank %}
                  <img
                    src="{{ block.settings.image | image_url }}"
                    alt="{{ block.settings.image.alt }}"
                    {% if lazy %}
                      loading="lazy"
                    {% endif %}
                  >
                {% else %}
                  {% case forloop.index %}
                    {% when 1 %}
                      {{ svg_example_1 }}
                    {% when 2 %}
                      {{ svg_example_2 }}
                    {% when 3 %}
                      {{ svg_example_3 }}
                    {% else %}
                      {{ svg_example_1 }}
                  {% endcase %}
                {% endif %}
              </div>
            </div>
