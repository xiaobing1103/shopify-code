                    {%- if bk_stts.icon != '1' -%}
                      {%- assign image = bk_stts.img -%}
                      {%- if bk_stts.icon == '4' -%}
                        <img
                          class="t4s-ani-{{ bk_stts.ani }}"
                          src="{{ bk_stts.svg_icon | asset_url }}"
                          alt="{{ bk_stts.txt }}"
                          style="display: inline-block; vertical-align: middle; margin-right: 8px; width: {{ bk_stts.img_width | default: 24 }}px !important; height: {{ bk_stts.img_height | default: 24 }}px !important; max-width: none !important;"
                        >
                      {%- elsif bk_stts.icon == '3' and image != blank -%}
                        <img
                          class="lazyloadt4s t4s-ani-{{ bk_stts.ani }}"
                          src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw=="
                          data-src="{{ image | image_url: width: 100 }}"
                          alt="{{ image.alt }}"
                          style="display: inline-block; vertical-align: middle; margin-right: 8px; object-fit: contain; width: {{ bk_stts.img_width | default: 24 }}px !important; height: {{ bk_stts.img_height | default: 24 }}px !important; max-width: none !important;"
