                            {{- 'products.product_single.countdown_text.hr_plural' | t -}}
                            ;</span
                          ></span
                        >
                        <span class="t4s-cd__time t4s-d-flex t4s-text-center is--minutes"
                          ><span class="t4s-cd__count cd-number">%-M</span
                          ><span class="t4s-cd__label cd-text"
                            >%!M:{{ 'products.product_single.countdown_text.min' | t }},
                            {{- 'products.product_single.countdown_text.min_plural' | t -}}
