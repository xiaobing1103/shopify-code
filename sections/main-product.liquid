                        class="t4s-countdown__mess t4s-ch t4s-lh-1 t4s-fwm"
                        style="font-size: {{ bk_stts.size }}px;margin-bottom:10px;"
                      >
                        {%- if bk_stts.icon != '1' -%}
                          {%- assign image = bk_stts.img -%}
                          {%- if bk_stts.icon == '3' and image != blank -%}
                            <img
                              class="lazyloadt4s t4s-w-100 t4s-ani-{{ bk_stts.ani }}"
                              src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw=="
                              data-src="{{ image | image_url: width: 50 }}"
                              width="{{ image.width }}"
                              height="{{ image.height }}"
                              alt="{{ image.alt }}"
                            >
                          {%- else -%}
                            <i class="t4s-ani-{{ bk_stts.ani }} {{ bk_stts.icon_name }}"></i>
                          {%- endif -%}
                          {%- if bk_stts.ani != 'none' -%}
                            <link
                              href="{{ 'ani-atc.min.css' | asset_url }}"
                              rel="stylesheet"
                              media="print"
                              onload="this.media='all'"
