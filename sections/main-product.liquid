                        <li class="t4s-complimentary_product t4s_{{ image_ratio }}">
                          {%- render 'pr-sidebar-loop',
                            product: item,
                            t4s_complimentary_product: 't4s_complimentary_product',
                            show_complimentary: block.settings.show_complimentary
                          -%}
                        </li>
                      {%- endfor -%}
                    </ul>
                  </div>
              {%- endcase -%}
            {%- endfor -%}
          </div>
        </div>
      </div>
    </div>
    <aside data-sidebar-content class="t4s-col-item t4s-col-12 t4s-col-lg-3 t4s-sidebar t4s-dn">
      <div class="t4s-loading--bg"></div>
    </aside>
  </div>
</div>
