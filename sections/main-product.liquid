            data-action-delay
          {% endif %}
          data-animation-atc='{ "ani":"{{ se_stts.ani }}","time":{{ se_stts.time }}000 }'
          type="button"
          data-action-atc
          data-variant-id="{{ current_variant.id }}"
          class="t4s-sticky-atc__atc t4s-btn-loading__svg"
