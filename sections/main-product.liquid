                    id="t4s-countdown-wrap{{ bk_id }}"
                    class="t4s-countdown-pr t4s-text-{{ bk_stts.al }} t4s-dn"
                    {{ block.shopify_attributes }}
                  >
                    {%- if bk_stts.mess != blank -%}
