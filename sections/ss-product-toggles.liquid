    </div>
  </div>
</template>

<script>
  function initProductToggles() {

    setTimeout(() => {

      let allSections = document.querySelectorAll(".shopify-section");
      let togglesSection = document.querySelector(".product-toggles-{{ section.id }}");
      let productSection = togglesSection.closest('.shopify-section');

      let sectionsArray = Array.from(allSections);  
 
      let productSectionIndex = sectionsArray.indexOf(productSection);  
      
      let sectionsAfterProductSection = sectionsArray.filter((section, index) => index > productSectionIndex);

      let idsAfterProductSection = sectionsAfterProductSection.map(section => section.id);  
      
      
      let items = document.querySelectorAll('.product-toggles-item-{{ section.id }}');

      if(items) {
        items.forEach((el, index) => {

          if (index < idsAfterProductSection.length) {  
            const newHref = `#${idsAfterProductSection[index]}`;  
            if (!el.getAttribute('href')) {  
              el.setAttribute('href', newHref);  
            }  
          }   
            
          el.addEventListener('click', (event) => {  
              event.preventDefault();  
              const targetId = el.getAttribute('href');  
              if (targetId) {  
                  const targetElement = document.querySelector(targetId);  
                  if (targetElement) {  
                      const elementPosition = targetElement.getBoundingClientRect().top + window.scrollY;
                      const offsetPosition = elementPosition - 100;
                      
                      window.scrollTo({  
                          top: offsetPosition,  
                          behavior: 'smooth'
                      });  
                  }  
              }  
          });
        });
      }
    }, 400)

  }

  document.addEventListener('DOMContentLoaded', initProductToggles);
  
  if (Shopify.designMode) {
     document.addEventListener('shopify:section:unload', initProductToggles);
     document.addEventListener('shopify:section:load', initProductToggles);
  }
</script>
            
